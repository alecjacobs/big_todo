<h1>Do big things, bro</h1>

<div class="tasks-wrapper">
  <h2>Tasks<span class="add-todo"><%= link_to '+', new_task_path %></span></h2>
  <ul class="todos">
    <% @tasks.sort_by { |a| a.completed ? 1 : 0 }.each do |task| %>
    <li class="task <%= "completed" if task.completed %>">
      <span class="title"><%= task.title %></span>
      <div class="clear"></div>
      <span class="complete"><%= link_to 'done', task_path(task, :completed => true), :method => :put %></span> -
      <span class="complete"><%= link_to 'not done', task_path(task, :completed => false), :method => :put %></span> -
      <span class="show"><%= link_to 'more', task_path(task) %></span> -
      <span class="edit"><%= link_to 'edit', edit_task_path(task) %></span> -
      <span class="delete"><%= link_to 'X', task, :method => :delete, :data => { confirm: 'Are you sure?' } %></span>
    </li>
    <% end %>
  </ul>
</div>
<br />